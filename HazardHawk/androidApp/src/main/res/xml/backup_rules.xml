<?xml version="1.0" encoding="utf-8"?>
<full-backup-content>
    <!-- Project data persistence -->
    <include domain="sharedpref" path="hazard_hawk_projects.xml"/>
    
    <!-- Camera and metadata settings persistence -->
    <include domain="sharedpref" path="hazardhawk_metadata_settings.xml"/>
    
    <!-- Photo tags and analysis data -->
    <include domain="sharedpref" path="photo_tags.xml"/>
    
    <!-- Exclude sensitive or temporary data -->
    <exclude domain="sharedpref" path="temp_settings.xml"/>
    <exclude domain="sharedpref" path="cache_data.xml"/>
</full-backup-content>
